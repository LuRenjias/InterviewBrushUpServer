<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hnu.dao.CommentDao">

    <resultMap type="edu.hnu.entity.Comment" id="CommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="commentContent" column="comment_content" jdbcType="VARCHAR"/>
        <result property="commentTime" column="comment_time" jdbcType="TIMESTAMP"/>
        <result property="parentCommentId" column="parent_comment_id" jdbcType="INTEGER"/>
        <result property="category" column="category" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CommentMap">
        select iduser_idcategory_idcomment_contentcomment_timeparent_comment_idcategory
        from comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CommentMap">
        select
        iduser_idcategory_idcomment_contentcomment_timeparent_comment_idcategory
        from comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="commentContent != null and commentContent != ''">
                and comment_content = #{commentContent}
            </if>
            <if test="commentTime != null">
                and comment_time = #{commentTime}
            </if>
            <if test="parentCommentId != null">
                and parent_comment_id = #{parentCommentId}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="commentContent != null and commentContent != ''">
                and comment_content = #{commentContent}
            </if>
            <if test="commentTime != null">
                and comment_time = #{commentTime}
            </if>
            <if test="parentCommentId != null">
                and parent_comment_id = #{parentCommentId}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into comment(user_idcategory_idcomment_contentcomment_timeparent_comment_idcategory)
        values (#{userId}#{categoryId}#{commentContent}#{commentTime}#{parentCommentId}#{category})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into comment(user_idcategory_idcomment_contentcomment_timeparent_comment_idcategory)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}#{entity.categoryId}#{entity.commentContent}#{entity.commentTime}#{entity.parentCommentId}#{entity.category})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into comment(user_idcategory_idcomment_contentcomment_timeparent_comment_idcategory)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}#{entity.categoryId}#{entity.commentContent}#{entity.commentTime}#{entity.parentCommentId}#{entity.category})
        </foreach>
        on duplicate key update
        user_id = values(user_id)category_id = values(category_id)comment_content = values(comment_content)comment_time
        = values(comment_time)parent_comment_id = values(parent_comment_id)category = values(category)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update comment
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="commentContent != null and commentContent != ''">
                comment_content = #{commentContent},
            </if>
            <if test="commentTime != null">
                comment_time = #{commentTime},
            </if>
            <if test="parentCommentId != null">
                parent_comment_id = #{parentCommentId},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from comment
        where id = #{id}
    </delete>

    <select id="listIn" resultMap="CommentMap">
        select *
        from comment
        where category = #{category}
        and (false
        <if test="ids != null and ids != ''">
            or category_id in ${ids}
        </if>)
    </select>

</mapper>

